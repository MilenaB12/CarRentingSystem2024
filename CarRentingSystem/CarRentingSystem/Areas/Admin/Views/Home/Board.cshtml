@{
    ViewData["Title"] = "Board";
}
<center>
    <h2>Area for administrators! :)</h2>
</center>
<div class="row">
    <div class="col-md-1">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">For Approval</h5>
                <p class="card-text">Please check new cars </p>
                <a asp-area="Admin" asp-controller="Car" asp-action="Approve" class="btn btn-primary">For Approval</a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-1">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">All Cars</h5>
                <p class="card-text">Here you can see all of your cars </p>
                <a asp-area="" asp-controller="Car" asp-action="All" class="btn btn-primary">All Cars</a>
            </div>
        </div>
    </div>
</div>

<br />
<div class="row">
    <div class="col-md-2">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">All Rents</h5>
                <p class="card-text">Here you can see all rental cars </p>
                <a asp-area="Admin" asp-controller="Rent" asp-action="AllRents" class="btn btn-primary">All rental Cars</a>
            </div>
        </div>
    </div>
</div>

<br />
<div class="row">
    <div class="col-md-2">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">All Users</h5>
                <p class="card-text">Here you can see all users</p>
                <a asp-area="Admin" asp-controller="User" asp-action="All" class="btn btn-primary">All Users</a>
            </div>
        </div>
    </div>
</div>

